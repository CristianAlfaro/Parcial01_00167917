<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.myapplication.NewGameActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.091">
        <ImageView
                android:layout_width="136dp"
                android:layout_height="118dp" app:srcCompat="@drawable/balon"
                android:id="@+id/iv_team2" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="10dp"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="136dp"
                android:layout_height="118dp" app:srcCompat="@drawable/balon"
                android:id="@+id/iv_team1" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp" android:layout_marginEnd="8dp"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="68dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.273"
            android:id="@+id/linearLayout">
        <EditText
                android:layout_width="176dp"
                android:layout_height="53dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/team1" android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1" android:hint="Team name"/>
        <EditText
                android:layout_width="176dp"
                android:layout_height="53dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/team2" android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1" android:hint="Team name" android:textColorLink="#7B1FA2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="355dp"
            android:layout_height="78dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.412" android:id="@+id/linearLayout2">
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_marcador1"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="8dp" android:textColor="#070707" android:textSize="50sp"
                android:layout_weight="1" android:gravity="center"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_marcador2"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="20dp" android:textColor="#070707" android:textSize="50sp"
                android:layout_weight="1" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="378dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.529" app:layout_constraintVertical_bias="0.741">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Button
                    android:text="+1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn1_team1" android:layout_margin="5dp"
                    android:background="#C5CAE9"/>
            <Button
                    android:text="+2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn2_team1" android:layout_margin="5dp"
                    android:background="#9FA8DA"/>
            <Button
                    android:text="+3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn3_team1" android:layout_margin="5dp"
                    android:background="#7986CB"/>
            <Button
                    android:text="-1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn_team1" android:background="#F48FB1"
                    android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Button
                    android:text="+1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn1_team2" android:layout_margin="5dp"
                    android:background="#C5CAE9"/>
            <Button
                    android:text="+2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn2_team2" android:layout_margin="5dp"
                    android:background="#9FA8DA"/>
            <Button
                    android:text="+3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn3_team2" android:layout_margin="5dp"
                    android:background="#7986CB"/>
            <Button
                    android:text="-1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn_team2" android:background="#F48FB1"
                    android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="FIN DEL PARTIDO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.973"
            app:layout_constraintVertical_bias="0.988" android:background="#02FFFFFF" android:padding="5dp"
            android:textColor="#474747"/>
</androidx.constraintlayout.widget.ConstraintLayout>
